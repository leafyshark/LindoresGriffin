mixin contactForm(contact = {})
  .contact-form.page-row-gap.main-content
      .contact-form__title
          h4 Get in Touch
      form(action='contact' method='POST').contact-form__container
          .contact-form__container__paragraph
              p Please fill in the following details and we will get back to you soon.
          .contact-form__container__details
              input(type="text" name="name" placeholder="Name")
              input(type="text" name="email" placeholder="Email")
              input(type="number" name="phone" placeholder="Phone")
              input(type="text" name="company" placeholder="Company Name")
          .contact-form__container__message
              textarea(name="message" placeholder='Message' cols="40" rows="8" maxlength="500" size="500")
              input(type="submit" value='Send').send-btn